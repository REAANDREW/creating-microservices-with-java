{{# partial "content" }}


<h2>Submit a new claim</h2>
<form method="post" action="/claims">
    <div class="row">
        <div class="col-md-6 col-xs-12">
            <h3>Personal Details</h3>
            {{> personal-details.hbs }}
        </div>
        <div class="col-md-6 col-xs-12">
            <h3>Address Details</h3>
            {{> address-details.hbs }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-xs-12">
            <h3>Bank Details</h3>
            {{> bank-details.hbs }}
        </div>
        <div class="col-md-6 col-xs-12">
            <h3>Contact Details</h3>
            {{> contact-details.hbs }}
        </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

{{/partial}}

{{> base-layout.hbs}}